<head>
    <title>EventAide | Budgeter</title>
</head>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row  border-bottom white-bg dashboard-header ">
        <div class="col-sm-3">
            <h2 style="font-weight: bold;">
                Budgeter
            </h2>
            


        </div>

        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <div class="defmsg" style="text-align:center"> <br />
                        <span class="font-bold alert alert-success m-b-sm">Budget: <strong>₱{{Budget}}</strong>  <span class="fa fa-pencil clickable" style="padding-left:5px;font-size:20px;" ng-click="updateBudget()"></span></span>
                    </div>
                    
                    <div class="col-md-3">
                        <div id="BudgetDonut" style="height: 250px;">
                        </div>
                    </div>
                    <div class="col-md-2" id="donutDet1" style="padding-left:0px;">
                        
                        <p style="font-size:16px;font-weight:100;color:green;margin-bottom:0px;">Total Cost</p>
                        <p style="font-size:42px;font-weight:bolder;color:green">{{Csts}}</p>
                    </div>
                    <div class="col-md-3">
                        <div id="BudgetDonut1"  style=" height:200px;padding-top:20px"></div>
                    </div>
                    <div class="col-md-4" id="donutDet2">
                        <p style="font-size:16px;font-weight:100;color:#3ea9da;margin-bottom:0px;">Amount Paid</p>
                        <p style="font-size:36px;font-weight:bolder;color:#3ea9da">{{Paid}}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-10">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>All projects assigned to this account</h5>
                    <div class="ibox-tools">
                        
                    </div>
                </div>
                <div class="ibox-content">
                    

                    <div class="project-list">
    
                        <table class="table table-hover">
                            <tbody>
                                <tr style="background: #6421ab;color: white;">
                                    <th style="text-align:right" class="col-md-3">Service</th>
                                   <th  style="text-align:center" class="col-md-2">Booked</th>
                                    <th style="text-align:center" class="col-md-2">Cost/Estimate</th>
                                    <th style="text-align:right" class="col-md-2">Paid</th>
                                    <th style="text-align:left" class="col-md-1"></th>
                                    
                                    
                                </tr>
                                
                                <tr ng-repeat="Details in BudgetList">
                                    <td class="project-status" style="text-align:right">
                                        <span class="label label-primary" style="background-color:#1e0279;color:#fbfbfb;font-size:14px;">{{Details.BudgetDetails.ServiceName}}</span>
                                    </td>
                                    <td class="project-people" style="text-align:center">
                                       <strong>{{Details.CompanyDetails[0].CompanyName}}</strong>
                                        
                                    </td>
                                    <td class="project-title">
                                        <div class="form-group has-success" style="margin-bottom:0px;" >
                                            <input type="number" ng- class="form-control" style="text-align:right" id="ey" ng-model="Details.BudgetDetails.CostEstimate" ng-keypress="$event.keyCode === 13 && changeCost(Details,Details.BudgetDetails.CostEstimate)" ng-blur="changeCost(Details,Details.BudgetDetails.CostEstimate)">
                                            
                                        </div>
                                    </td>
                                    <td class="project-title">
                                        <div class="form-group has-warning" style="margin-bottom:0px;">
                                            <input type="number" class="form-control" style="text-align:right;" ng-model="Details.BudgetDetails.Paid" ng-keypress="$event.keyCode === 13 && changePaid(Details,Details.BudgetDetails.Paid)" ng-blur="changePaid(Details,Details.BudgetDetails.Paid)">
                                        </div>
                                    </td>
                                    <td class="project-title">
                                        
                                      
                                        <div class="progress progress-striped active progress-mini">
                                           
                                            <div ng-style="PrgMiniStyle(Details)" class="progress-bar progress-bar-warning">
                                                <span class="sr-only">15% Complete (warning)</span>
                                            </div>
                                            <div ng-style="PrgMiniStyle2(Details)" class="progress-bar progress-bar-success">
                                                <span class="sr-only">30% Complete (success)</span>
                                            </div>

                                        </div>
                                    </td>
                                    
                                    
                                    
                                </tr>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>