@{
    ViewBag.Title = "Register";
}
@if (ViewBag.NotMatch == true)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Password does not match");
        };
    </script>
}
@if (ViewBag.UserExist == true)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Username already in use");
        };
    </script>
}

@if ((ViewBag.UserExist == true)&&(ViewBag.NotMatch==true))
{
    <script type="text/javascript">
        window.onload = function () {
            alert("Username already in use, Password does not match");
        };
    </script>
}



<head>
    <title>EventAide | Register</title>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>
    <link rel="icon" href="../img/logofront.png" />
    <link href="~/Content/Inspinia/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Inspinia/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Inspinia/custom.css" rel="stylesheet" />
    <link href="~/Content/Inspinia/animate.css" rel="stylesheet" />
    <link href="~/Content/Inspinia/style.css" rel="stylesheet" />



   







</head>
<body class="gray-bg">
    @using (Html.BeginForm("Register", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()






        <div class="middle-box text-center loginscreen   animated fadeInDown">
            <div>
                <div class="img-responsive">
                    <input type="file" id="upload" name="file" style="visibility: hidden; width: 1px; height: 1px" multiple onchange="readUrl(this)" />
                    <a href="" onclick="document.getElementById('upload').click(); return false">
                        <img id="file" class="img-circle" src="/uploads/Default.png" style="width:100px;height:100px; margin-bottom:20px;" />
                    </a>
                </div>


             


                <div class="form-group">
                    <input type="text" class="form-control" placeholder="First Name" required="" name="firstname">



                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Middle Name" required="" name="middlename">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Last Name" required="" name="lastname">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" required="" name="username">
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="" name="password">
                </div>
                @*<label>Confirm Password</label>*@
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password" required="" name="confPass">
                </div>


                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>



                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="../Account/Login">Login</a>


            </div>
        </div>




  


    <!-- Mainly scripts -->
  

    }

</body>

<script src="~/Content/Inspinia/jquery-2.1.1.js"></script>
<script src="~/Content/Inspinia/bootstrap.min.js"></script>


<!-- iCheck -->
<script src="~/Content/Inspinia/icheck.min.js"></script>

<script>
    $(document).ready(function () {
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
    });
</script>

<script>
    function readUrl(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#file')
                    .attr('src', e.target.result)
                    .width(100)
                    .height(100);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
